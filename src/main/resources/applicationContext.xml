<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="ua.shykun.delivery.service" />

    <context:component-scan base-package="ua.shykun.delivery.util.events" />

    <context:component-scan base-package="ua.shykun.delivery.domain" >
        <context:include-filter type="annotation" expression="ua.shykun.delivery.annotations.MyComponent"/>
    </context:component-scan>

    <bean class="ua.shykun.delivery.util.BenchmarkBeanPostProccessor"/>
    <bean class="ua.shykun.delivery.util.CustomBeanFactoryPostProccessor" />

    <bean name="newCustomer" class="ua.shykun.delivery.domain.Customer">
        <constructor-arg value="Kostianty"/>
    </bean>

</beans>